eingabe = input("Gib eine Zahl ein: ")

try:
  zahl = int(eingabe)  # Umwandlung der Eingabe in eine Ganzzahl
except ValueError:
  print("Ung√ºltige Eingabe. Bitte gib eine numerische Zahl ein.")
  exit()  # Beende das Programm, falls die Eingabe kein numerischer Wert ist

if zahl % 2 == 0:
  print("Die Zahl ist gerade.")
else:
  print("Die Zahl ist ungerade.")
